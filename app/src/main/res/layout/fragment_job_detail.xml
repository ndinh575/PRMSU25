<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chi tiết công việc"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Job Title Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Job Title -->
                    <TextView
                        android:id="@+id/tvJobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tuyển nhân viên pha chế 2"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="8dp" />

                    <!-- Job ID -->
                    <TextView
                        android:id="@+id/tvJobId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12312 31 231 234124 1241"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <!-- Application Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cách thức ứng tuyển"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ứng viên nộp hồ sơ trực tuyến bằng cách bấm Ứng tuyển ngay dưới đây."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingMultiplier="1.3"
                        android:layout_marginBottom="8dp" />

                    <!-- Deadline -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hạn nộp hồ sơ: 2025-06-25"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="20dp" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnApplyNow"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Ứng tuyển ngay"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:background="@drawable/button_apply_now"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btnApplyFast"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Ứng tuyển nhanh"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:background="@drawable/button_apply_fast"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Save Button -->
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Lưu tin"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:background="@drawable/button_save_job"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Job Information Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin công việc"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="16dp" />

                    <!-- Post Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Ngày đăng:"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvPostDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="7/8/2025"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <!-- Salary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Lương:"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvSalary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10000000"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <!-- Work Schedule -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Thời gian làm việc:"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvWorkSchedule"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thoả thuận"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <!-- Level -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Cấp bậc:"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvLevel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thông thường"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Employer Information Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin nhà tuyển dụng"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="16dp" />

                    <!-- Employer Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Nhà tuyển dụng:"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvEmployerName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hieu Ung Vien"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                    <!-- Requirements -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Yêu cầu:"
                            android:textSize="14sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvRequirements"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phục vụ / Bán hàng"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Loading Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
