<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Job Title -->
        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intern Backend Developer"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Job Description -->
        <TextView
            android:id="@+id/tvJobDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="We are looking for backend developer..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Tags Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Location Tag -->
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ho Chi Mi..."
                android:background="@drawable/tag_background_location"
                android:textColor="#00695C"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_marginEnd="8dp" />

            <!-- Experience Tag -->
            <TextView
                android:id="@+id/tvExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No experience r..."
                android:background="@drawable/tag_background_experience"
                android:textColor="#00695C"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_marginEnd="8dp" />

            <!-- Salary Tag -->
            <TextView
                android:id="@+id/tvSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 - 10..."
                android:background="@drawable/tag_background_salary"
                android:textColor="#00695C"
                android:textSize="12sp"
                android:padding="6dp" />

        </LinearLayout>

        <!-- Bottom Info Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Application Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày ứng tuyển: "
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvApplicationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7/12/2025, 12:00:46 PM"
                    android:textSize="12sp"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

        <!-- CV Submitted -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CV đã nộp: "
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvCvSubmitted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xem CV"
                android:textSize="12sp"
                android:textColor="#00796B"
                android:textStyle="bold" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang chờ"
                android:background="@drawable/status_background_pending"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:padding="4dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
