<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_applicant_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_job_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Applied for: DevOps Engineer"
            app:layout_constraintTop_toBottomOf="@id/text_applicant_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/text_cv_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CV: CV_DevOps_NguyenA.pdf"
            app:layout_constraintTop_toBottomOf="@id/text_job_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/text_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submitted: 2025-07-24"
            app:layout_constraintTop_toBottomOf="@id/text_cv_file"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btn_view_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View CV"
            app:layout_constraintTop_toBottomOf="@id/text_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
